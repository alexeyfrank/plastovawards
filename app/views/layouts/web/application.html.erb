<body class="<%= @header_img[:body_class] %>">
<div class="parallax1">
	<img class="parallax" src="/img/parallax/parallax1.png">
</div>
<% if !@page.blank? && @page.is_home_page %>
<div class="parallax2">
	<img class="parallax" src="/img/parallax/parallax2.png">
</div>
<% end %>

<div id="wrapper">

	<header id="header">
		<section class="header-top">
			<div class="wrap">
				<ul class="service-menu">
					<li class="<%= 'active' if current_page?(root_path) %>"><a href="/" class="service-main-page"></a></li>
					<li><%= link_to '', new_feedback_path, class: 'service-mail' %></li>
          <!-- <li><a href="#" class="service-map"></a></li> -->
				</ul>
				<ul class="select-lang">
					<li class="<%= 'active' if locale == :ru %>">><a href="<%= url_for(locale: :ru) %>" class="lang-rus <%= 'active' if locale == :ru %>"></a></li>
					<li class="<%= 'active' if locale == :en %>"><a href="<%= url_for(locale: :en) %>" class="lang-en <%= 'active' if locale == :en %>"></a></li>
          <% if false %>
					<li class="<%= 'active' if locale == :de %>"><a href="<%= url_for(locale: :de) %>" class="lang-de <%= 'active' if locale == :de %>"></a></li>
          <% end %>
				</ul>
				<ul class="social-networks">
					<li><a href="<%= Settings.twitter_url %>" target="_blank"><img src="/img/icon-twitter.png" width="8" height="13" alt="" title="" /></a></li>
					<li><a href="<%= Settings.facebook_url %>" target="_blank"><img src="/img/icon-facebook.png" width="8" height="15" alt="" title="" /></a></li>
					<li><a href="<%= Settings.vkontakte_url %>" target="_blank"><img src="/img/icon-vk.png" width="20" height="13" alt="" title="" /></a></li>
				</ul>
			</div>
		</section>

		<section class="header-middle">
			<a href="/">
				<img src="<%= @header_img[:src] %>" width="<%= @header_img[:width] %>" height="<%= @header_img[:height] %>" alt="" title="" />
			</a>
		</section>

		<section class="header-bottom">
			<div class="delim"></div>
			<div class="wrap-main-menu">
				<nav class="main-menu">
          <% # cache do %>
            <%= render_menu id: 1, template: 'web/shared/top_menu' %>
				  <% # end %>
        </nav>
				<div class="wrap-sub-menu"></div>
			</div>
		</section>

	</header><!-- #header-->

	<div class="content">
    <%= yield %>
	</div><!-- #content-->
</div><!-- #wrapper -->

<footer id="footer">
	<div class="wrap">
		<div class="copyright"><%= t 'views.main.copyright' %></div>
		<ul class="footer-logo">
			<li><a href="http://www.shr.su/" target="_blank"><img src="<%= t 'views.main.logo_footer' %>" alt="" title="" width="101" height="67" /></a></li>
			<li><a href="http://ulgov.ru/" target="_blank"><img src="/img/logo-footer2.png" alt="" title="" width="93" height="78" /></a></li>
		</ul>
	</div>
</footer><!-- #footer -->

<div class="shadow"></div>
<div class="pop-up">
	<div class="pop-up-close"></div>
	<div class="pop-up-arrow"></div>
	<div class="left">
		<img src="/img/gubernator.png" alt="" title="" width="156" height="178" />
	</div>
	<div class="pop-up-body">
		<p>
			<span class="pop-up-quote-left"></span>
			<%= t 'views.main.governor_review' %>
      <span class="pop-up-quote-right"></span>
		</p>
		<footer><%= t 'views.main.governor_footer' %></footer>
</div>


