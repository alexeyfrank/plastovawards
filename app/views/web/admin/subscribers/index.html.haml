%h1 Просмотр списка подписчиков

%table.table.table-bordered
  %thead
    %tr
      %th.id-col #
      %th= t('activerecord.attributes.subscriber.fio')
      %th= t('activerecord.attributes.subscriber.email')
      %th= t('activerecord.attributes.subscriber.phone')
      %th= t('activerecord.attributes.subscriber.created_at')
      %th.actions-col
  %tbody
    - @subscribers.each do |subscriber|
      %tr
        %td.id-col= subscriber.id
        %td= link_to subscriber.fio, edit_admin_subscriber_path(subscriber)
        %td= subscriber.email
        %td= subscriber.phone
        %td= subscriber.created_at
        %td.actions-col
          = link_to t('views.admin.subscribers.index.edit'), edit_admin_subscriber_path(subscriber), class: 'btn btn-info'
          = link_to t('views.admin.subscribers.index.delete'), admin_subscriber_path(subscriber), method: :delete, class: 'btn btn-alert'

/ = paginate @subscribers
